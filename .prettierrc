{
    "tabWidth": 4,
    "semi": true,
    "overrides": [
        {
            "files": ["*.tsx", "*.ts"],
            "options": {
                "printWidth": 120,
                "singleQuote": false,
                "quoteProps": "preserve",
                "bracketSpacing": true,
                "jsxBracketSameLine": true
            }
        },
        {
            "files": ["*.json", "*.js"],
            "options": {
                "tabWidth": 2,
                "singleQuote": true
            }
        },
        {
            "files": ["*.scss", "*.yml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
